{
  "name": "ers-utils",
  "version": "0.2.4",
  "description": "European Respiratory Society utils library for preparing and parsing content",
  "main": "lib/library.min.js",
  "nyc": {
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "scripts": {
    "build": "webpack --env build --mode production",
    "dev": "webpack --progress --colors --watch --env dev --mode development",
    "eslint": "eslint src/. test/. --config .eslintrc.json",
    "test": "npm run eslint && nyc mocha --compilers js:babel-core/register --colors ./test/lib --recursive",
    "test:watch": "mocha --compilers js:babel-core/register --colors -w ./test/lib --recursive",
    "test:watch-composition": "mocha --compilers js:babel-core/register --colors -w ./test/lib/composition.test.js",
    "test:watch-markdown": "mocha --compilers js:babel-core/register --colors -w ./test/lib/format.markdown.test.js",
    "coverage": "nyc report --reporter text",
    "coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls",
    "codecov": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EuropeanRespiratorySociety/ers-utils.git"
  },
  "keywords": [
    "utils",
    "ERS",
    "European",
    "Respiratory",
    "Society"
  ],
  "author": "Samuel Pouyt",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/EuropeanRespiratorySociety/ers-utils/issues"
  },
  "homepage": "https://github.com/EuropeanRespiratorySociety/ers-utils#readme",
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-eslint": "8.2.3",
    "babel-loader": "7.1.4",
    "babel-plugin-add-module-exports": "0.2.1",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-preset-es2015": "6.24.1",
    "chai": "4.1.2",
    "coveralls": "^3.0.0",
    "eslint": "^4.19.0",
    "eslint-loader": "2.0.0",
    "istanbul": "^0.4.5",
    "mocha": "5.1.1",
    "nyc": "^12.0.1",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.15",
    "yargs": "^11.1.0"
  },
  "dependencies": {
    "embed-video": "^2.0.4",
    "lodash": "^4.17.10",
    "marked": "^0.3.19",
    "moment": "^2.22.1",
    "sanitize-html": "^1.18.2"
  }
}
